{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"], // Ensure this line is included
    "typeRoots": ["./node_modules/@types"] // Optional: explicitly point to type definitions
  },
  "exclude": ["node_modules"]
}
