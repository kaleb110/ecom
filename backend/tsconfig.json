{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Add this to specify the output directory for compiled files
    "rootDir": "./src", // Add this to specify the root directory of your source files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "types": ["node"], // Include Node.js types
    "resolveJsonModule": true // Add this if you're importing JSON files
  },
  "exclude": ["node_modules"] // Exclude node_modules to avoid type conflicts
}
