{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "types": ["node"], // This ensures TypeScript includes Node.js types
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
